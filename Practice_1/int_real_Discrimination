#include<stdio.h>
#include<math.h>

/*
	2018년 10월 08일
	한경대학교 프로그래밍입문 과제
	
	임의의 실수를 하나 입력받아서
	정수일 경우: 짝수와 홀수를 판별해 출력함
	정수가 아닌 실수일 경우: 소수 부분만 출력함
*/


int main() {
	double num;			//임의의 실수를 입력받는 변수
	int fl_num;		//임의의 실수(num)보다 크지 않은 가장 큰 정수를 저장하는 함수

	printf("임의의 실수를 입력하여 주십시오. ");
	scanf_s("%lf", &num);

	fl_num = floor(num);	//floor(num) 함수의 역할: 실수인 num보다 크지 않은 가장 큰 정수를 구한다.

	printf("===========================================\n");
	printf("입력하신 수는 ");

	if ((num - fl_num) == 0) {			//입력한 수가 정수일 때 실행되는 부분
		printf("정수이며, ");
		if (fl_num % 2 == 0) {			//입력한 수가 짝수일 때 실행되는 부분
			printf("짝수입니다.");
		}
		else {							//입력한 수가 홀수일 때 실행되는 부분
			printf("홀수입니다.");
		}
	}
	else if(num > 0){						//입력한 수가 정수가 아닌  실행되는 부분
		printf("실수이며, 소수 부분은 %7.6lf입니다.\n소수 여섯째 자리까지 표시됩니다.\n", num - fl_num);
	}
	else {                  //입력한 수가 정수가 아닌 음수일때 실행되는 부분
		printf("실수이며, 소수 부분은 %7.6lf입니다.\n소수 여섯째 자리까지 표시됩니다.\n", fl_num - num + 1);
	}
	return 0;
}
